mixin popup()
    .popup#popup 
        .popup__close 
        .popup__body 
            .popup__content.quiz__item_7.quiz__item.active
                form(action="").quiz__item-content 
                    .quiz__left  
                        .quiz__left-item 
                            h2.quiz__item-title Введите ваше имя
                            input(type="text" placeholder="Имя Фамилия" name="name" required).quiz__item-input
                        .quiz__left-item 
                            h2.quiz__item-title Где удобно получить консультацию?
                            .quiz__item-socials 
                                .quiz__item-social  
                                    input(type="radio" name="socialMedia" id="socialMedia-13" required)
                                    label(for="socialMedia-13").quiz__item-p What’s app
                                    label(for="socialMedia-13").quiz__item-icon 
                                        img(src="@img/whatsapp.png", alt="")
                                .quiz__item-social 
                                    input(type="radio" name="socialMedia" id="socialMedia-23" required)
                                    label(for="socialMedia-23").quiz__item-p Telegram
                                    label(for="socialMedia-23").quiz__item-icon 
                                        img(src="@img/telegram.png", alt="")
                                .quiz__item-social 
                                    input(type="radio" name="socialMedia" id="socialMedia-33" required)
                                    label(for="socialMedia-33").quiz__item-p Zoom / Skype
                                    label(for="socialMedia-33").quiz__item-icon 
                                        img(src="@img/skype.png", alt="")
                                .quiz__item-social 
                                    input(type="radio" name="socialMedia" id="socialMedia-43" required)
                                    label(for="socialMedia-43").quiz__item-p По телефону
                                    label(for="socialMedia-43").quiz__item-icon 
                                        img(src="@img/phone.png", alt="") 
